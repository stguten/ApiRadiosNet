generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Radio {
  id        Int     @id @default(autoincrement())
  nome      String?
  cidade    String?
  estado    String?
  regiao    String?
  pais      String?
  url       String? @unique
  segmentos String?
  statusId  Status  @relation(fields: [status], references: [id])
  status    Int

  @@map("radio")
}

model Log {
  id       Int       @id @default(autoincrement())
  mensagem String?
  tipo     String?
  horario  DateTime? @default(now())

  @@map("log")
}

model Status {
  id        Int     @id @default(0)
  descricao String?
  radio     Radio[]

  @@map("status")
}
